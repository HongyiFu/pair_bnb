<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>

<div class="password-field">
  <%= form.label("Confirm Password".to_sym) %>
  <%= form.password_field :password_confirmation %>
</div>

<div class="text-field">
  <%= form.label :first_name %>
  <%= form.text_field :first_name %>
</div>

<div class="text-field">
  <%= form.label :last_name %>
  <%= form.text_field :last_name %>
</div>

<%= form.radio_button(:gender, "male") %>
<%= form.label(:gender_male, "Male") %>
<%= form.radio_button(:gender, "female") %>
<%= form.label(:gender_female, "Female") %>
<%= form.radio_button(:gender, "undefined") %>
<%= form.label(:gender_undefined, "Not revealing") %>

<div class="text-field">
  <%= form.label :birthday %>
  <%= form.text_field :birthday %>
</div>

<div class="text-field">
  <%= form.label :phone_number %>
  <%= form.text_field :phone_number %>
</div>

<div class="text-field">
  <%= form.label :country_of_residence %>
  <%= form.text_field :country %>
</div>
<div class='file-field'>
  <%= form.label :avatar, 'Upload your avatar' %>
  <%= form.file_field :avatar %>
</div>